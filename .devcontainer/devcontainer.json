{
    "name": "Study Hub Advanced Labs",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/python:1": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "bierner.markdown-preview-github-styles"
            ]
        }
    },
    "forwardPorts": [
        3000,
        5000,
        8000
    ],
    "postCreateCommand": "pip install -r backend/requirements.txt && cd study-hub-react && npm install && python3 backend/codespace_bridge.py &",
    "remoteUser": "vscode"
}